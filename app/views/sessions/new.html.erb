<h1>Log In</h1>

<%= form_tag sessions_path do %>

	<div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username, params[:username] %>
  </div>
	<div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
  
<% end %>